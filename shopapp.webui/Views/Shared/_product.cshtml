@model Product

<div class="card mb-2">
    <img class="card-img-top" src="~/image/@Model.ImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.CategoryID" class="btn btn-primary btn-sm">İncele</a>
        <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-primary">Düzenle</a>

        <form method="post" action="/Product/Delete">
            <input type="hidden" name="ProductID" value="@Model.ProductID"> 
            <button type="submit" class="btn btn-danger btn-sm">Sil</button>
            
        
        </form>

    </div>
</div>   