@using shopapp.webui.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<Category>

<div class="list-group">
	<a asp-controller="Product" asp-action="Listcs" asp-route-id=""  class="list-group-item list-group-item-action">Tüm Kategoriler </a>
	@foreach (var cat in Model)
	{
		<a asp-controller="Product" asp-action="Listcs" asp-route-id="@cat.CatId" class="list-group-item list-group-item @(ViewBag.SelectedCategory==cat.CatId.ToString()? "active" :" ")">@cat.Name </a>
	}
</div>